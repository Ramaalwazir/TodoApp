<Window x:Class="TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp"
        mc:Ignorable="d"
        Title="To-DO App" Height="350" Width="535">
    <Grid>
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="400" Height="30"/>
        <Button Name="AddButton" Content="Lägg till uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="30" Margin="420,10,0,0" Click="AddButton_Click"/>
        <ListBox Name="TasksListBox" HorizontalAlignment="Left" Height="195" Margin="0,60,0,0" VerticalAlignment="Top" Width="525" RenderTransformOrigin="0.537,0.667"/>
        <Button Name="RemoveButton" Content="Ta bort uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="30" Margin="420,260,0,0" Click="RemoveButton_Click" RenderTransformOrigin="0.552,1.389"/>
    </Grid>
</Window>
